<% set_meta_tags title: "練習ページ" %>

<div class="container text-muted">
  <div class='top-wrapper'>
    <div class='top-inner-text text-center', id='button'>
      <div>
        <h1 class="text-center mt-5"><%= @sentence.content %></h1>
      </div>
      <div>
        <p class="mt-3", id="notice">録音ボタンを押して3回繰り返そう！</p>
      </div>

      <div class="mt-4 mb-5">
        <button class="btn btn-primary btn-lg" id="rec">録音する</button>
        <button class="btn btn-danger btn-lg d-none" id="result">採点する</button>
        <h2 class="d-none" id="display"></h2>
        <h3 class="d-none" id="judge"></h3>
        <p class="d-none" id=""></p>
          <input type="hidden" id="sentence" value="<%= @sentence.content %>">
      </div>

      <section class="tape">
        <div class="sound-clips my-2">
          <audio id="playback" controls></audio>
          <a id ="download" href="#" type="hidden"></a>
          <a id="stop" type="hidden"></a>
        </div>
        <div class="row justify-content-center pt-2">
            <button class = "col-2 btn btn-primary mr-3 invisible" id="play" >再生する</button>
            <%= link_to "リトライ", request.path_info, id: "restart", class: "col-2 btn btn-primary ms-3 invisible" %>
        </div>
      </section>
    </div>
  </div>
</div>


<div id="text"></div>
<div id="text2"></div>
<div id="startTime"></div>
<div id="endTime"></div>


<%= javascript_pack_tag 'app', 'data-turbolinks-track': 'reload' %>