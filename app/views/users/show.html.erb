<% set_meta_tags title: "マイページ" %>
<div class="container text-muted mt-5">
  <div class="row">
    <div class="profile mb-5 offset-md-1">
      <h1><i class="fas fa-user pe-2"></i><%= @user.name %> さんのマイページ</h1>
      <%= link_to edit_user_path, class: 'btn btn-primary ms-5 pl-5' do %>
        <i class="fa-regular fa-pen-to-square pe-2"></i>編集
      <% end %>
    </div>
    <ul class="tab-list list-unstyled mt-3 mb-5">
      <li class="tab tab-active text-center fs-3">
        練習結果一覧
      </li>
      <li class="tab text-center fs-3">
        試合結果一覧
      </li>
    </ul>
    <%# タブで選択された要素の部分 %>
    <div class="tabbox-contents">
      <div class="tabbox box-show">
        <%= render 'users/practice_tab' %> 
      </div>
      <div class="tabbox">
        <%= render 'users/game_tab' %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'jquery_pagination', 'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag 'mypage', 'data-turbolinks-track': 'reload' %>