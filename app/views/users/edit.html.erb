<% set_meta_tags title: "プロフィール編集" %>
<div class="container text-muted">
  <div class="row mt-5">
    <div class="col-lg-7 offset-lg-2">
      <h1 class="mb-5"><i class="fas fa-user pe-2"></i>プロフィール編集</h1>
      <%= form_with model: @user, url:user_path, local: true do |f| %>
        <%= render 'shared/error_message' %>
        <div class="form-group">
          <i class="fas fa-user"></i>
          <%= f.label :name, "アカウント名" %>
          <%= f.text_field :name, class: "form-control mb-3 mt-1", placeholder: :name %>
        </div>

        <div class="form-group">
          <i class="fas fa-envelope"></i>
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control mb-3 mt-1", placeholder: :email %>
        </div>

        <div class="form-group">
          <i class="fas fa-lock"></i>
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control mb-3 mt-1", placeholder: :password %>
        </div>

        <div class="form-group">
          <i class="fas fa-lock"></i>
          <%= f.label :password_confirmation, "パスワード確認" %>
          <%= f.password_field :password_confirmation, class: "form-control mb-3 mt-1", placeholder: '再度パスワードをご入力ください' %>
        </div>
        
        <div class="actions mt-2 mb-3" style="width: 60px;">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @user.errors.any? %>
  <input type="hidden" id="user" value="<%= current_user.id %>">
  <%= javascript_pack_tag 'users_edit' %>
<% end %>
