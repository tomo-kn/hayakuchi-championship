<% set_meta_tags title: "プロフィール編集" %>
<h1>プロフィール編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, url:user_path, local: true do |f| %>
      <%= render 'shared/error_message' %>
      <div class="form-group">
        <i class="fas fa-user"></i>
        <%= f.label :name, "アカウント名" %>
        <%= f.text_field :name, class: "form-control mb-3", placeholder: :name %>
      </div>

      <div class="form-group">
        <i class="fas fa-envelope"></i>
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control mb-3", placeholder: :email %>
      </div>

      <div class="form-group">
        <i class="fas fa-lock"></i>
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: "form-control mb-3", placeholder: :password %>
      </div>

      <div class="form-group">
        <i class="fas fa-lock"></i>
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, class: "form-control mb-3", placeholder: :password_confirmation %>
      </div>
      <div class="actions">
        <%= f.submit "更新する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<% if @user.errors.any? %>
  <input type="hidden" id="user" value="<%= current_user.id %>">
  <%= javascript_pack_tag 'users_edit' %>
<% end %>
